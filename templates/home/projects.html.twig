{% extends 'base.html.twig' %}

{% block title %}Projects index{% endblock %}

{% block stylesheets %}
        {{ encore_entry_link_tags('index') }}
{% endblock %}

{% block body %}

    <a href="{{ path('home') }}" class="btn btn-primary fixed-btn">home</a>

        {% for project in projects %}
        
        {% if loop.index%2 == 0 %}
        <div class="card card-project right mb-5">
            <div class="card-body row">
            <img class="card-img-top col-md-3 col-12 project-pic" src="{{ project.picture }}" alt="{{ project.name }}">
                <h3 class="col-md-3 col-12">{{ project.name }}</h3>
                <p class="card-text col-md-3 col-12">started on: {{ project.startDate ? project.startDate|date('Y-m-d') : '' }}</p>
                <p class="col-md-3 col-12">ended on: {{ project.endDate ? project.endDate|date('Y-m-d') : '' }}</p>
                    <a class="btn btn-primary col-4 mx-auto" href="{{ path('home_show', {'id': project.id}) }}">more details</a>
            </div>
        </div>
        {% else %}
        <div class="card card-project left mb-5">
            <div class="card-body row">
            <img class="card-img-top col-md-3 col-12 project-pic" src="{{ project.picture }}" alt="{{ project.name }}">
                <h3 class="col-md-3 col-12">{{ project.name }}</h3>
                <p class="card-text col-md-3 col-12">started on: {{ project.startDate ? project.startDate|date('Y-m-d') : '' }}</p>
                <p class="col-md-3 col-12">ended on: {{ project.endDate ? project.endDate|date('Y-m-d') : '' }}</p>
                    <a class="btn btn-primary col-4 mx-auto" href="{{ path('home_show', {'id': project.id}) }}">more details</a>
            </div>
        </div>
        {% endif %}
        {% else %}
                <p>no records found</p>
        {% endfor %}

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('index') }}
{% endblock %}