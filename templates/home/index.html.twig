{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}
        {{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
<div class="container-fluid p-0">

    <div class="head p-4">
        <h2 class="page-title">Quentin LATOUR</h2>
        <h2 class="page-title mb-0" style="text-align: right;">Web Developer</h2>
    </div>

    <div class="row m-0 p-0">
        <img class="col-6 m-0 p-0 profile-pic" src="{{ user.picture }}">
        <p class="col-6 desc-card m-0 p-0">{{ user.description }}</p>
        <p class="col-6 desc-card-hidden m-0 p-0">{{ user.description }}</p>
    </div>

    <div class="row info mx-0 py-5">
        <div class="col-4 mb-0 pb-0 px-0">
            <h3>informations</h3>
            <hr>
            <p>Phone: {{ user.phone }}</p>
            <p>Mail: {{ user.mail }}</p>
            <p class="mb-0">Address: {{ user.address }}</p>
       </div>
        <div class="col-4 mb-0 pb-0 px-0">
            <h3>My skills</h3>
            <hr>
            <div class="row">
            {% for skill in user.skills %}
                <p class="col-4">{{ skill.name }}</p>
            {% endfor %}
            </div>
        </div>
        <div class="col-4 m-0 p-0">
        <a href="{{ path('home_projects') }}" class="btn btn-danger btn-projects mt-2"> My Projects</a>
        </div>
    </div>
</div>

<style>


</style>
{% endblock %}

{% block javascript %}
    {{ encore_entry_script_tags('home') }}
{% endblock %}